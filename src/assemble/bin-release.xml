<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>ext</outputDirectory>
            <includes>
                <include>${project.groupId}:mindoc</include>
                <include>commons-io:commons-io</include>
            </includes>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/html</directory>
            <filtered>false</filtered>
            <outputDirectory>resources/html</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/assemble/resources/</directory>
            <filtered>false</filtered>
            <outputDirectory>.</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>